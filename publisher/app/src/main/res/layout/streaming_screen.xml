<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:focusable="true"
    android:keepScreenOn="true">

    <com.videodac.publisher.ui.BlockiesIdenticon
        android:id="@+id/channel_identicon"
        android:layout_width="@dimen/channel_identicon_size"
        android:layout_height="@dimen/channel_identicon_size" />

    <TextView
        android:id="@+id/channel_credit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/wallet_text_height"
        android:paddingLeft="@dimen/wallet_text_padding_left"
        android:paddingStart="@dimen/wallet_text_padding_left"
        android:textColor="@android:color/white"
        android:fontFamily="@font/akkurat"
        android:text="@string/wallet_balance"
        android:textSize="16sp"
        android:singleLine="true"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/channel_address"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/wallet_text_height"
        android:paddingLeft="@dimen/wallet_text_padding_left"
        android:paddingStart="@dimen/wallet_text_padding_left"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/akkurat"
        android:text="@string/wallet_public_key"
        android:ellipsize="middle"
        android:textSize="12sp"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/channel_credit"
        tools:ignore="RtlSymmetry" />

    <include
        android:id="@+id/launch_screen"
        layout="@layout/streaming_launch_screen"
        />

    <include
        android:id="@+id/streaming_screen"
        layout="@layout/streaming_camera_screen"
        />



</RelativeLayout>
